%% -*- erlang -*-
{erl_opts,
 [debug_info]}.

{ct_opts,
 [{enable_builtin_hooks, false}]}.
%{ct_readable, false}.

{minimum_otp_vsn, "19.0"}.

{eunit_opts,
 [verbose]}.

{deps, [{bear, "0.8.7"}]}.

{profiles,
 [ {test,
    [{deps, [ {proper, "1.3.0"}
            ]}]}
 , {dev,
    [{plugins, [rebar3_hex]}]}
 , {concuerror,
    [{erl_opts, [ {d, 'CONCUERROR'}
                ]}]}
 ]}.

{xref_checks,[undefined_function_calls,
              undefined_functions,
              locals_not_used,
              deprecated_function_calls,
              warnings_as_errors,
              deprecated_functions]}.
